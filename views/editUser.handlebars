<header>
	<title>{{user.username}} Edit</title>
</header>
<link rel='stylesheet' href='public/css/main_style.css'/>
    <form method="POST" action="/edit" id="formForEditUser">
        <label for="street:" >Street :</label><br>
        <input type="text" id="street" name="street" placeholder="Street" ><br>
        <label for="city:" >City :</label><br>
        <input type="text" id="city" name="city" placeholder="City" ><br>
        <label for="state:" >State :</label><br>
        <input type="text" id="state" name="state" placeholder="State" ><br>
        <label for="zipcode:" >Zip :</label><br>
        <input type="text" id="zipcode" name="zipcode" placeholder="Zipcode" ><br>
        <label for="phn_num" >Phone Number:</label><br>
        <input type="text" id="phonenumber" name="phonenumber" placeholder="Phone Number"><br>
        <label for="email:" >Email :</label><br>
        <input type="text" id="email" name="email" placeholder="Email" ><br>
        <input type="submit" value="Submit" >
    </form>
    <div id="errorcheck">
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
    </div>
    <form action="/dashboard/mypage" id="cancel" method="post" >
        <input type="submit" value="Cancel" />
    </form>
    <script src="/public/js/ClientSideUpdateProfile.js"></script>